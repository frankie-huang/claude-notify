      "color": "purple",
      "icon": "image",
      "input_field": "imageSource",
      "detail_template": "**图像分析**",
      "rule_template": "mcp__4_5v_mcp__analyze_image(*)"
    },
    "mcp__web_reader__webReader": {
      "name": "mcp__web_reader__webReader",
      "display_name": "网页阅读",
      "color": "purple",
      "icon": "web",
      "input_field": "url",
      "detail_template": "**URL：** {url}",
      "rule_template": "mcp__web_reader__webReader({url})"
    }
  },
  "_defaults": {
    "unknown_tool": {
      "color": "grey",
      "detail_template": "**工具：** {tool_name}",
      "rule_template": "{tool_name}(*)"
    }

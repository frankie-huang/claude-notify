{
  "_comment": "工具类型统一配置 - Claude Code 权限请求",
  "_usage": "Shell 使用 jq/python3 读取，Python 使用 json.load()",
  "tools": {
    "Bash": {
      "name": "Bash",
      "display_name": "命令执行",
      "color": "orange",
      "icon": "terminal",
      "input_field": "command",
      "detail_template": "**命令：**\\n```\\n{command}\\n```",
      "limit_length": 500,
      "rule_template": "Bash({command})",
      "truncate_suffix": "..."
    },
    "Edit": {
      "name": "Edit",
      "display_name": "编辑文件",
      "color": "yellow",
      "icon": "edit",
      "input_field": "file_path",
      "detail_template": "**文件：** `{file_path}`",
      "rule_template": "Edit({file_path})"
    },
    "Write": {
      "name": "Write",
      "display_name": "写入文件",
      "color": "yellow",
      "icon": "write",
      "input_field": "file_path",
      "detail_template": "**文件：** `{file_path}`",
      "rule_template": "Write({file_path})"
    },
    "Read": {
      "name": "Read",
      "display_name": "读取文件",
      "color": "blue",
      "icon": "read",
      "input_field": "file_path",
      "detail_template": "**文件：** `{file_path}`",
      "rule_template": "Read({file_path})"
    },
    "Glob": {
      "name": "Glob",
      "display_name": "文件搜索",
      "color": "blue",
      "icon": "search",
      "input_field": "pattern",
      "detail_template": "**模式：** `{pattern}`",
      "rule_template": "Glob({pattern})"
    },
    "Grep": {
      "name": "Grep",
      "display_name": "内容搜索",
      "color": "blue",
      "icon": "search",
      "input_field": "pattern",
      "detail_template": "**搜索：** `{pattern}`",
      "rule_template": "Grep({pattern})"
    },
    "WebSearch": {
      "name": "WebSearch",
      "display_name": "网络搜索",
      "color": "purple",
      "icon": "web",
      "input_field": "query",
      "detail_template": "**查询：** {query}",
      "limit_length": 200,
      "rule_template": "WebSearch({query})"
    },
    "WebFetch": {
      "name": "WebFetch",
      "display_name": "获取网页",
      "color": "purple",
      "icon": "web",
      "input_field": "url",
      "detail_template": "**URL：** {url}",
